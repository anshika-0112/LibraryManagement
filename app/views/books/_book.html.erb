<div class="d-flex flex-wrap">
<% @books.each do |book| %>
    <div class="card m-5" style="width: 18rem;">
        <div class="card-image">
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= book.name%></h5>
            <p class="card-text">Author: <%= book.author%></p>
            <div>
                <% book.categories.each do |category|%>
                    <span class="badge" style="background-color: #9A616D;"><%= category.name%></span>
                <%end%>
            </div>
            <%= link_to "Show", book_path(book),class:"btn btn-primary"%>
            <%= link_to "Edit", edit_book_path(book), class:"btn btn-primary"%>
            <%= link_to "Delete", book_path(book), method: :delete,class:"btn btn-primary" %>
        </div>
    </div>
<% end%>
</div>
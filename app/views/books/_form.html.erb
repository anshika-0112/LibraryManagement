<% if @book.errors.any? %>
<h2>prohibited this book from being saved:</h2>
<ul>
  <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_with model: @book, local:true  do |form| %>
<div>
<%= form.label :name, style: "display: block" %>
<%= form.text_field :name %>
</div>

<div>
<%= form.label :author, style: "display: block" %>
<%= form.text_field :author %>
</div>

<div>
<%= form.label :number_of_copies, style: "display: block" %>
<%= form.text_field :number_of_copies %>
</div>

<div>
<%= form.submit%>
</div>
<% end %>
<%= link_to "Back to Books", path=books_path %>
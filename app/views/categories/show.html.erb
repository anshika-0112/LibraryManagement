<div class="container">
<h1>Displaying Category</h1>
<p><strong>Category Name: </strong><%= @category.name%></p>
<%= link_to "Edit", edit_category_path(@category),class:"btn btn-dark btn"%>
<%= link_to "Delete", category_path(@category),data:{method: :delete},class:"btn btn-dark btn"%>
<h2>Books</h2>
<%= render 'books/book'%>
<%= link_to "Back to Categories", categories_path,class:"btn btn-dark btn"%>
</div>
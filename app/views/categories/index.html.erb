<div class="container text-center mt-4">
    <h1>Categories</h1>
    <% @categories.each do |category|%>
        <div class="card text-center mb-5">
            <div class="card-header">
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= category.name%></h5>
                <p class="card-text"><%= pluralize(category.books.count,"Book")%></p>
                <%= link_to "Show", category_path(category),class:"btn btn-dark btn"%>
                <%= link_to "Edit", edit_category_path(category),class:"btn btn-dark btn"%>
                <%= link_to "Delete", category_path(category),data:{method: :delete},class:"btn btn-dark btn"%>
            </div>
            <div class="card-footer text-muted">
                <small>Created ago</small>
            </div>
        </div>
    <%end%>
</div>
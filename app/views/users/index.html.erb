<h1>Displaying All Users</h1>
<div class="d-flex flex-wrap text-center">

    <% @users.each do |user| %>
    <div class="card user-card m-3" style="width: 18rem;">
        <div class="user-image"></div>
        <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <p class="card-text"><%= user.email %></p>
            <%= link_to "Show", user_path(user),class:"btn btn-success"%>
            <% if user_signed_in? && (user==current_user || current_user.user_type=="Admin") %>
                <%= link_to "Edit", edit_user_registration_path(user), class:"btn btn-success"%>
                <%= link_to "Delete", user_path(user), method: :delete,class:"btn btn-success" %> 
            <%end%>
        </div>
    </div>
    <% end %>
</div>